{% extends 'base.html.twig' %}

{% block title %} Mailbox {% endblock %}

{% block main %}

    <div class="container main body-content span=8 offset=2">
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <fieldset>
                        <legend>Mailbox</legend>

                    {% for mail in mails %}

                    {% if not mail.readed %}
                        <div class="col-xs-7 col-md-6 text-right">
                            <div style="color:red;display: inline-block;margin-right: 150px">Unread</div>
                        </div>
                        <div class="col-md-6">
                            <span style="font-weight: bold">From:</span>&nbsp;&nbsp;&nbsp;{{ mail.senderUserId.email }}
                            <br>
                            <span style="font-weight: bold">About:</span>&nbsp;&nbsp;&nbsp;{{ mail.about }}
                            <br>
                            <br>
                            <div>
                                <a href="{{ path('current_mail', {"id": mail.id}) }}" class="btn btn-info">Read</a>
                            </div>
                        </div>
                        <br>
                        <br>
                        <br>
                        <br>
                    {% else %}
                        <div class="col-xs-7 col-md-6 text-right">
                            <div style="color:green;display: inline-block;margin-right: 150px">Read</div>
                        </div>
                        <div class="col-md-6">
                            <span style="font-weight: bold">From:</span>&nbsp;&nbsp;&nbsp;{{ mail.senderUserId.email }}
                            <br>
                            <span style="font-weight: bold">About:</span>&nbsp;&nbsp;&nbsp;{{ mail.about }}
                            <br>
                            <br>
                            <div>
                                <a href="{{ path('current_mail', {"id": mail.id}) }}" class="btn btn-info">Read</a>
                            </div>
                        </div>
                        <br>
                        <br>
                        <br>
                        <br>
                    {% endif %}

                    <hr>
                    {% endfor %}
                    </fieldset>
                </div>
            </div>
        </div>
    </div>



{% endblock %}