{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}
{#{% block body_id 'blog_index' %}#}

{% block main %}

    <div class="multiple-items" id="arrows">
        {% for slader in all %}
            <div class="containter image img-responsive ">
                <a href="{{ path('publication_view', {'id':slader.id}) }}" class="images">
                    <h2 class="slide_titles">&nbsp;&nbsp;{{ slader.title }}</h2>
                    <img src="{{ asset('uploads/images/publications/' ~ slader.image) }}" alt="slader_picture" width=400px; height=300px; />
                    {#<span>{{ slader.author }}</span>#}
                </a>
            </div>
        {% endfor %}
    </div>
    <div class="container main">
        <div class="row">
            <div class="col-md-9 lead">
                <div class="row">
                    <div class="col-md-12">
                        <a href="{{ path('news') }}" class="header-article"><h2>TOP news</h2></a>
                        {% for new in newNews %}
                            <article class="article article_lead clearfix">
                                <figure class="article__image">
                                    <a class="images">
                                        <img src="{{ asset('uploads/images/publications/' ~ new.image) }}" alt="news_picture" class="img-responsive"/>
                                    </a>
                                </figure>
                                <div class="article__content">
                                    <div class="article__entry">
                                        <h3 style="margin-top: 0;"> {{ new.title }}</h3>
                                        <span>by {{ new.author }} </span>
                                    </div>
                                    <div class="article__actions">
                                        <div>
                                            <i class="glyphicon glyphicon-thumbs-up"></i>
                                            <span class="publication_date">&nbsp;{{ new.viewLikes }}</span>
                                        </div>
                                        <a href="{{ path('publication_view', {'id': new.id}) }}" class="btn btn-reverse btn-arrow">
                                            <span>Read more<svg version="1.1" id="Layer_1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" viewBox="0 0 36.1 25.8" enable-background="new 0 0 36.1 25.8" xml:space="preserve"><g><line fill="none" stroke="#9ec747" stroke-width="3" stroke-miterlimit="10" x1="0" y1="12.9" x2="34" y2="12.9"></line><polyline fill="none" stroke="#9ec747" stroke-width="3" stroke-miterlimit="10" points="22.2,1.1 34,12.9 22.2,24.7   "></polyline></g></svg></span>
                                        </a>
                                    </div>
                                </div>
                            </article>
                        {% endfor %}
                    </div>
                </div>
                <hr class="line-article">
                <div class="row">
                    {% for new in lastNews %}
                        <div class="col-md-4 littleImg">
                            <article>
                                <figure class="article__image">
                                    <a class="images1">
                                        <img src="{{ asset('uploads/images/publications/' ~ new.image) }}" alt="fitness_picture"/>
                                    </a>
                                </figure>
                                <div class="article__content">
                                    <div class="article__entry">
                                        <h3>{{ new.title }}</h3>
                                        <span>by {{ new.author }}</span>
                                    </div>
                                    <div class="article__actions">
                                        <div>
                                            <i class="glyphicon glyphicon-thumbs-up"></i>
                                            <span class="publication_date">&nbsp;{{ new.viewLikes }}</span>
                                        </div>
                                        <a href="{{ path('publication_view', {'id': new.id}) }}" class="btn btn-reverse btn-arrow">
                                            <span>Read more<svg version="1.1" id="Layer_1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" viewBox="0 0 36.1 25.8" enable-background="new 0 0 36.1 25.8" xml:space="preserve"><g><line fill="none" stroke="#9ec747" stroke-width="3" stroke-miterlimit="10" x1="0" y1="12.9" x2="34" y2="12.9"></line><polyline fill="none" stroke="#9ec747" stroke-width="3" stroke-miterlimit="10" points="22.2,1.1 34,12.9 22.2,24.7   "></polyline></g></svg></span>
                                        </a>
                                    </div>
                                </div>
                            </article>
                        </div>
                    {% endfor %}
                </div>
                <hr class="line-article diffrend2">
                <a href="{{ path('fitness') }}" class="header-article"><h2>FITNESS</h2></a>
                <div class="row">
                    {% for fit in fitnes %}
                        <div class="col-md-6" style="margin-bottom: 70px">
                            <article>
                                <figure class="article__image">
                                    <a class="images">
                                        <img src="{{ asset('uploads/images/publications/' ~ fit.image) }}" alt="fitness_picture"/>
                                    </a>
                                </figure>
                                <div class="article__content">
                                    <div class="article__entry">
                                        <h3>{{ fit.title }}</h3>
                                        <span>by {{ fit.author }}</span>
                                    </div>
                                    <div class="article__actions">
                                        <div>
                                            <i class="glyphicon glyphicon-thumbs-up"></i>
                                            <span class="publication_date">&nbsp;{{ fit.viewLikes }}</span>
                                        </div>
                                        <a href="{{ path('publication_view', {'id': fit.id}) }}" class="btn btn-reverse btn-arrow">
                                            <span>Read more<svg version="1.1" id="Layer_1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" viewBox="0 0 36.1 25.8" enable-background="new 0 0 36.1 25.8" xml:space="preserve"><g><line fill="none" stroke="#9ec747" stroke-width="3" stroke-miterlimit="10" x1="0" y1="12.9" x2="34" y2="12.9"></line><polyline fill="none" stroke="#9ec747" stroke-width="3" stroke-miterlimit="10" points="22.2,1.1 34,12.9 22.2,24.7   "></polyline></g></svg></span>
                                        </a>
                                    </div>
                                </div>
                            </article>
                        </div>
                    {% endfor %}
                </div>
                <hr class="line-article diffrend">
                <a href="{{ path('food') }}" class="header-article"><h2>FOOD</h2></a>
                <div class="row">
                    {% for food in foods %}
                        <div class="col-md-6" style="margin-bottom: 70px">
                            <article>
                                <figure class="article__image">
                                    <a class="images">
                                        <img src="{{ asset('uploads/images/publications/' ~ food.image ) }}" alt="food_picture"/>
                                    </a>
                                </figure>
                                <div class="article__content">
                                    <div class="article__entry">
                                        <h3>{{ food.title }}</h3>
                                        <span>by {{ food.author }}</span>
                                    </div>
                                    <div class="article__actions">
                                        <div>
                                            <i class="glyphicon glyphicon-thumbs-up"></i>
                                            <span class="publication_date">&nbsp;{{ food.viewLikes }}</span>
                                        </div>
                                        <a href="{{ path('publication_view', {'id': food.id}) }}" class="btn btn-reverse btn-arrow">
                                            <span>Read more<svg version="1.1" id="Layer_1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" viewBox="0 0 36.1 25.8" enable-background="new 0 0 36.1 25.8" xml:space="preserve"><g><line fill="none" stroke="#9ec747" stroke-width="3" stroke-miterlimit="10" x1="0" y1="12.9" x2="34" y2="12.9"></line><polyline fill="none" stroke="#9ec747" stroke-width="3" stroke-miterlimit="10" points="22.2,1.1 34,12.9 22.2,24.7   "></polyline></g></svg></span>
                                        </a>
                                    </div>
                                </div>
                            </article>
                        </div>
                    {% endfor %}
                </div>
            </div>
            <div class="col-md-3 newsletter-margin">
                <div class="row">
                    <div class="col-md-12">
                        <div class="thumbnail center well well-sm newsletter text-center">
                            <h2>Newsletter</h2>
                            <p>Subscribe to our weekly Newsletter and stay tuned</p>
                            <form action="{{ path('news_letter')}}" method="POST">
                                <input type="hidden" name="url" value="blog_index">
                                <div class="input-group">
                                    <span class="input-group-addon news_input">
                                        <!-- <i class="fa fa-envelope"></i> -->
                                    </span>
                                    {% if app.user %}
                                        <input class="form-control" type="text" name="newsName" placeholder="Name" value="{{ user.username }}"/>
                                        <input class="form-control" type="text" name="newsEmail" placeholder="your@email.com" value="{{ user.email }}"/>
                                    {% else %}
                                        <input class="form-control" type="text" name="newsName" placeholder="Name"/>
                                        <input class="form-control" type="text" name="newsEmail" placeholder="your@email.com"/>
                                    {% endif %}
                                </div>
                                <button type="submit" class="button raised hoverable">
                                    <div class="anim"></div><span>Subscribe</span>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}